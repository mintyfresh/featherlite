{
  "name": "featherlight",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "imports": {
    "#pyodide": "./deps/pyodide/"
  },
  "scripts": {
    "dev": "vite --mode development",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "pyodide:download": "curl -L https://github.com/pyodide/pyodide/releases/download/0.27.5/pyodide-0.27.5.tar.bz2 -o pyodide-0.27.5.tar.bz2",
    "pyodide:extract": "tar -xjf pyodide-0.27.5.tar.bz2 -C deps",
    "electron:dev": "vite --mode electron",
    "electron:build": "tsc -b && vite build --mode electron && electron-builder",
    "electron:preview": "electron .",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check ."
  },
  "dependencies": {
    "@mantine/core": "^7.17.4",
    "@mantine/hooks": "^7.17.4",
    "@tabler/icons-react": "^3.31.0",
    "combinations": "^1.0.0",
    "date-fns": "^4.1.0",
    "dexie": "^4.0.11",
    "dexie-react-hooks": "^1.1.7",
    "idb": "^8.0.2",
    "play-sound": "^1.1.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.5.2",
    "react-router-dom": "^7.5.2",
    "sound-play": "^1.1.0",
    "vite-plugin-static-copy": "^2.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/combinations": "^1.0.2",
    "@types/jest": "^29.5.14",
    "@types/play-sound": "^1.1.2",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "electron": "^35.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "postcss": "^8.5.3",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "3.5.3",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.1",
    "vite-plugin-electron": "^0.29.0"
  },
  "build": {
    "appId": "com.featherlight.app",
    "productName": "Featherlight",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
