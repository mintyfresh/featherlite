{
  "name": "featherlite",
  "author": "Minty Fresh",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "imports": {
    "#pyodide": "./deps/pyodide/"
  },
  "scripts": {
    "dev": "vite --mode development",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "pyodide:download": "curl -L https://github.com/pyodide/pyodide/releases/download/0.27.5/pyodide-0.27.5.tar.bz2 -o pyodide-0.27.5.tar.bz2",
    "pyodide:extract": "tar -xjf pyodide-0.27.5.tar.bz2 -C deps",
    "electron:dev": "vite --mode electron",
    "electron:build": "tsc -b && vite build --mode electron",
    "electron:preview": "electron .",
    "electron:release": "npm run electron:build && electron-builder",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "tsr:watch": "tsr watch",
    "tsr:generate": "tsr generate",
    "test": "jest"
  },
  "dependencies": {
    "@mantine/core": "^7.17.4",
    "@mantine/hooks": "^7.17.4",
    "@mantine/notifications": "^7.17.5",
    "@tabler/icons-react": "^3.31.0",
    "@tanstack/react-router": "^1.117.1",
    "@tanstack/react-router-devtools": "^1.117.1",
    "combinations": "^1.0.0",
    "date-fns": "^4.1.0",
    "dexie": "^4.0.11",
    "dexie-react-hooks": "^1.1.7",
    "play-sound": "^1.1.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sound-play": "^1.1.0",
    "tmp": "^0.2.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@tanstack/router-plugin": "^1.117.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/combinations": "^1.0.2",
    "@types/jest": "^29.5.14",
    "@types/play-sound": "^1.1.2",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/tmp": "^0.2.6",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "electron": "^35.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.3",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "3.5.3",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-static-copy": "^2.3.1"
  },
  "build": {
    "appId": "com.featherlite.app",
    "productName": "Featherlite",
    "directories": {
      "output": "release",
      "buildResources": "public"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "asarUnpack": [
      "../dist/*.wav",
      "../dist/*.mp3",
      "../dist/*.ogg"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
